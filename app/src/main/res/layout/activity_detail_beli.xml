<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.DetailBeliActivity"
    android:background="@drawable/bg_emina">

    <TextView
        android:id="@+id/nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text= "Nama : "
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/i_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/nama"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/alamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alamat : "
        app:layout_constraintTop_toBottomOf="@id/nama"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/i_alamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/alamat"
        app:layout_constraintTop_toBottomOf="@id/i_nama"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/kabupaten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kabupaten : "
        app:layout_constraintTop_toBottomOf="@id/alamat"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/i_kabupaten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/kabupaten"
        app:layout_constraintTop_toBottomOf="@id/i_alamat"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/kecamatan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kecamatan : "
        app:layout_constraintTop_toBottomOf="@id/kabupaten"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/i_kecamatan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/kecamatan"
        app:layout_constraintTop_toBottomOf="@id/i_kabupaten"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/kode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kode Produk : "
        app:layout_constraintTop_toBottomOf="@id/kecamatan"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/i_kode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/kode"
        app:layout_constraintTop_toBottomOf="@id/i_kecamatan"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/jumlah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jumlah : "
        app:layout_constraintTop_toBottomOf="@id/kode"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/i_jumlah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/jumlah"
        app:layout_constraintTop_toBottomOf="@id/i_kode"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/bayar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pembayaran : "
        app:layout_constraintTop_toBottomOf="@id/jumlah"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/i_bayar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/bayar"
        app:layout_constraintTop_toBottomOf="@id/i_jumlah"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/jika_tf"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/bayar"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/namatf"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/note"
        android:hint="Masukkan Nama Lengkap" />

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/i_bayar">

        <Button
            android:id="@+id/btnChoose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Choose"
            android:textColor="#FFFFFF"
            android:background="#FF32232D"
            android:layout_marginRight="5dp"/>

        <Button
            android:id="@+id/btnUpload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Upload"
            android:textColor="#FFFFFF"
            android:background="#FF32232D"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/buktiTf"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/linearlayout"/>
    <ImageView
        android:id="@+id/icon_camera"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="125dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintLeft_toLeftOf="@id/linearlayout"
        app:layout_constraintRight_toRightOf="@id/linearlayout"
        app:layout_constraintTop_toBottomOf="@id/linearlayout"
        android:src="@drawable/ic_menu_camera"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        app:layout_constraintLeft_toLeftOf="@id/linearlayout"
        app:layout_constraintRight_toRightOf="@id/linearlayout"
        app:layout_constraintTop_toBottomOf="@id/linearlayout"
        android:text="Upload Bukti Transfer" />

    
<!--    <ProgressBar-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:id="@+id/progress_bar"-->
<!--        android:layout_marginTop="10dp"-->
<!--        app:layout_constraintTop_toBottomOf="@id/namatf"-->
<!--        android:visibility="invisible"/>-->

    <Button
        android:id="@+id/selesai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/buktiTf"
        android:text="Selesai"
        android:textColor="#FFFFFF"
        android:background="#FF32232D"/>

</androidx.constraintlayout.widget.ConstraintLayout>